<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4">
    <RelativeLayout
        android:id="@+id/hang1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/color_diem"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sao" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bien">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="LÀM QUEN VỚI CÁC PHÉP TOÁN
CỘNG, TRỪ, SO SÁNH TRONG PHẠM VI 20"
                android:textAlignment="center"
                android:textColor="@color/color_diem"
                android:textSize="19sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/nut_thoat"
            android:layout_width="59dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custombackbutton" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hang2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_gotron"
            android:text="PHẠM VI 15"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_gotron"
            android:text="PHẠM VI 16"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_gotron"
            android:text="PHẠM VI 17"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_gotron"
            android:text="PHẠM VI 18"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_gotron"
            android:text="PHẠM VI 19"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_gotron"
            android:text="PHẠM VI 20"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>



</LinearLayout>