<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:padding="@dimen/padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_sao"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_sao" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diem"
            android:textSize="@dimen/text_size"
            android:textColor="@color/color_diem" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="@dimen/text_size"
            android:textAlignment="center"
            android:textColor="@color/color_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_do"
            android:layout_margin="@dimen/margin_image"
            android:text="1"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_vang"
            android:layout_margin="@dimen/margin_image"
            android:text="2"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_xanh"
            android:text="3"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_button" />
        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_xanhla"
            android:layout_margin="@dimen/margin_image"
            android:text="4"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_hong"
            android:layout_margin="@dimen/margin_image"
            android:text="5"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_do"
            android:layout_margin="@dimen/margin_image"
            android:text="6"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_vang"
            android:layout_margin="@dimen/margin_image"
            android:text="7"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_xanh"
            android:layout_margin="@dimen/margin_image"
            android:text="8"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_xanhla"
            android:layout_margin="@dimen/margin_image"
            android:text="9"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_hong"
            android:layout_margin="@dimen/margin_image"
            android:text="10"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@drawable/bt_back"
        android:layout_marginTop="@dimen/margin_image"/>
</LinearLayout>