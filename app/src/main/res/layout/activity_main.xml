<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
        android:background="@drawable/bg1"
    >

    <RelativeLayout
        android:id="@+id/hang1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="điểm số"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/color_diem"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sao"/>
        </LinearLayout>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
           android:background="@drawable/backg1"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/nut_thoat"
            android:layout_width="50dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custombackbutton"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hang2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_do"
            android:text="1"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_button" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_vang"
            android:text="2"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_button" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_xanh"
            android:text="3"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_button" />

        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_xanhla"
            android:text="4"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_button" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_margin="@dimen/margin_image"
            android:layout_weight="1"
            android:background="@drawable/bt_hong"
            android:text="5"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_button" />
    </LinearLayout>
    <LinearLayout
             android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_do"
            android:layout_margin="@dimen/margin_image"
            android:text="6"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_vang"
            android:layout_margin="@dimen/margin_image"
            android:text="7"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_xanh"
            android:layout_margin="@dimen/margin_image"
            android:text="8"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_xanhla"
            android:layout_margin="@dimen/margin_image"
            android:text="9"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/bt_10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bt_height"
            android:layout_weight="1"
            android:background="@drawable/bt_hong"
            android:layout_margin="@dimen/margin_image"
            android:text="10"
            android:textSize="@dimen/text_size_button"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>